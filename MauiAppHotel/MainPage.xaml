<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.MainPage"
             Title="HotelApp">

    <VerticalStackLayout>
        <!-- Cabeçalho com botão SOBRE à esquerda e título à direita -->
        <Grid Padding="10"
              BackgroundColor="{StaticResource Primary}"
              HeightRequest="56">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Botão SOBRE à esquerda -->
            <Button Text="Sobre"
                    FontSize="14"
                    CornerRadius="15"
                    Padding="10,2"
                    BackgroundColor="{StaticResource White}"
                    TextColor="{StaticResource Primary}"
                    VerticalOptions="Center"
                    Clicked="OnSobreClicked"/>

            <!-- Título do app à direita -->
            <Label Text="HotelApp"
                   Grid.Column="1"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="End"
                   VerticalOptions="Center" />
        </Grid>

        <!-- Conteúdo principal -->
        <ScrollView>
            <VerticalStackLayout
                Padding="30,16"
                Spacing="20">

                <Image
                    Source="dotnet_bot.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="dot net bot in a race car number eight" />

                <Label
                    Text="Hello, World!"
                    FontFamily="Kalam"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />

                <Label
                    Text="Welcome to &#10;.NET Multi-platform App UI"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

                <!-- REMOVIDO: botão Sobre duplicado (o botão de topo já abre a página Sobre) -->

                <Button
                    x:Name="CounterBtn"
                    Text="Click me"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
