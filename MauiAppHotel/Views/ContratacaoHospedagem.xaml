<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="C치lculo da Di치ria"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <Grid RowDefinitions="Auto, *">

        <!-- 游꺚 Cabe칞alho -->
        <Grid Padding="10"
              BackgroundColor="{StaticResource Primary}"
              Grid.Row="0"
              RowDefinitions="Auto, Auto">

            <!-- T칤tulo -->
            <Label Text="C치lculo da Di치ria"
                   Grid.Row="0"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" 
                   Margin="0,5,0,15"/>

            <HorizontalStackLayout Grid.Row="1"
                       Spacing="15"
                       HorizontalOptions="Start"
                       VerticalOptions="Center">


                <!-- Bot칚o SOBRE -->
                <Button Text="Sobre"
                    FontSize="14"
                    CornerRadius="15"
                    Padding="10,2"
                    BackgroundColor="{StaticResource White}"
                    TextColor="{StaticResource Primary}"
                    Clicked="Button_Sobre_Clicked"/>

                <!-- Bot칚o CONTATO -->
                <Button Text="Contato"
                    FontSize="14"
                    CornerRadius="15"
                    Padding="10,2"
                    BackgroundColor="{StaticResource White}"
                    TextColor="{StaticResource Primary}"
                    Clicked="Button_Contato_Clicked"/>
            </HorizontalStackLayout>

        </Grid>

        <!-- 游 Conte칰do -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout VerticalOptions="CenterAndExpand"
                                 Padding="10"
                                 Spacing="10">

                <!-- Se칞칚o de Quantidade de Pessoas -->
                <Frame Padding="10">
                    <VerticalStackLayout>
                        <Grid RowDefinitions="Auto, Auto"
                              ColumnDefinitions="*, *, 2*">

                            <!-- Adultos -->
                            <Label Grid.Row="0" Grid.Column="0" Text="Adultos:" />
                            <Label Grid.Row="0" Grid.Column="1"
                                   TextColor="{StaticResource Primary}"
                                   Text="{Binding Value}"
                                   BindingContext="{x:Reference stp_adultos}"/>
                            <Stepper Grid.Row="0" Grid.Column="2"
                                     x:Name="stp_adultos"
                                     Minimum="0" Maximum="10" Increment="1" />

                            <!-- Crian칞as -->
                            <Label Grid.Row="1" Grid.Column="0" Text="Crian칞as:" />
                            <Label Grid.Row="1" Grid.Column="1"
                                   TextColor="{StaticResource Primary}"
                                   Text="{Binding Value}"
                                   BindingContext="{x:Reference stp_criancas}"/>
                            <Stepper Grid.Row="1" Grid.Column="2"
                                     x:Name="stp_criancas"
                                     Minimum="0" Maximum="10" Increment="1" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Se칞칚o de Escolha de Su칤te -->
                <Frame Padding="10" Margin="10">
                    <VerticalStackLayout>
                        <Label Text="Escolha sua Su칤te"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               TextColor="{StaticResource Primary}"/>
                        <Picker x:Name="pck_quarto"
                                Title="Selecione sua Acomoda칞칚o"
                                ItemDisplayBinding="{Binding Descricao}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Se칞칚o de Per칤odo -->
                <Frame Padding="10" Margin="10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Per칤odo da Estadia"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               TextColor="{StaticResource Primary}"/>

                        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="10">
                            <Label Text="Check-in:" VerticalOptions="Center" />
                            <DatePicker x:Name="dtpck_checkin"
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="10">
                            <Label Text="Check-out:" VerticalOptions="Center" />
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Bot칚o Avan칞ar -->
                <Button Text="Avan칞ar"
                        Clicked="Button_Clicked"
                        HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>