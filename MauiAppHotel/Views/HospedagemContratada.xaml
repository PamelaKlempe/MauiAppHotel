<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand"
                             Padding="10"
                             Spacing="15">

            <!-- ðŸ¨ Quarto selecionado -->
            <Label Text="{Binding QuartoSelecionado.Descricao}"
                   TextColor="{StaticResource Primary}"
                   FontFamily="Kalam"
                   FontSize="40"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,20"/>

            <!-- ðŸ‘¨â€ðŸ‘©â€ðŸ‘§ Quantidade de pessoas -->
            <Frame Margin="5" CornerRadius="15">
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="25">
                    <HorizontalStackLayout>
                        <Label Text="Adultos: " />
                        <Label Text="{Binding QntAdultos}" TextColor="{StaticResource Primary}" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="CrianÃ§as: " />
                        <Label Text="{Binding QntCriancas}" TextColor="{StaticResource Primary}" />
                    </HorizontalStackLayout>
                </StackLayout>
            </Frame>

            <!-- ðŸ—“ï¸ PerÃ­odo -->
            <Frame Margin="5" CornerRadius="15">
                <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto, Auto">
                    <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" />
                    <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" />
                    <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                           TextColor="{StaticResource Primary}" />
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"
                           TextColor="{StaticResource Primary}" />
                    <Label Grid.Row="1" Grid.Column="2"
                           Text="{Binding Estadia}"
                           TextColor="{StaticResource Primary}" />
                </Grid>
            </Frame>

            <!-- ðŸ’° Valor total -->
            <Frame Margin="5" CornerRadius="15">
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Valor Total: " />
                    <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}"
                           TextColor="{StaticResource Primary}"
                           FontAttributes="Bold" />
                </HorizontalStackLayout>
            </Frame>

            <!-- ðŸ§ Cadastro do HÃ³spede -->
            <Frame Margin="10" CornerRadius="15" BackgroundColor="White" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Cadastro do HÃ³spede"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="{StaticResource Primary}"
                           HorizontalOptions="Center"/>

                    <Entry x:Name="txtNome" Placeholder="Nome completo" />
                    <DatePicker x:Name="dtNascimento" Format="dd/MM/yyyy" />
                    <Entry x:Name="txtTelefone" Placeholder="Telefone (WhatsApp)" Keyboard="Telephone" />
                    <Entry x:Name="txtEmail" Placeholder="E-mail" Keyboard="Email" />

                    <Button Text="Confirmar Reserva"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="15"
                            Clicked="Button_Confirmar_Clicked" />
                </VerticalStackLayout>
            </Frame>
               <!-- ðŸ”™ Voltar -->
                    <Button Text="Voltar"
                             HorizontalOptions="Center"
                             Clicked="Button_Clicked"
                             BackgroundColor="{StaticResource Secondary}"
                             TextColor="Black"
                             CornerRadius="15"
                             Margin="0,5,0,10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>